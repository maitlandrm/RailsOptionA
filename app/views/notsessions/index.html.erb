<fieldset>
	<h1>Lender</h1>
	<form method = 'post' action = '/lenders'>
		<input type = 'hidden' name = 'authenticity_token' value = '<%= form_authenticity_token %>'/>
		<label>First Name</label>
		<br>
		<input name = 'lender[first_name]' />
		<br><br>
		<label>Last Name</label>
		<br>
		<input name = 'lender[last_name]' />
		<br><br>
		<label>Email</label>
		<br>
		<input name = 'lender[email]' />
		<br><br>
		<label>Password</label>
		<br>
		<input type = 'password' name = 'lender[password]' />
		<br><br>
		<label>Password Confirmation</label>
		<br><br>
		<input  type = 'password' name = 'lender[password_confirmation]'>
		<br><br>
		<label>Money</label>
		<br>
		<select name = 'lender[money]'>
			<option value = '25'>$25</option>
			<option value = '50'>$50</option>
			<option value = '75'>$75</option>
			<option value = '100'>$100</option>
			<option value = '150'>$150</option>
			<option value = '200'>$200</option>
			<option value = '250'>$250</option>
			<option value = '300'>$300</option>
			<option value = '400'>$400</option>
			<option value = '500'>$500</option>
			<option value = '600'>$600</option>
		</select>
		<input type = 'submit' value = 'Register' />
	</form>
</fieldset>
